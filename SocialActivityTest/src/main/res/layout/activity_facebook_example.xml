<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.run.socialactivitytest.socialactivitytest.FacebookExampleActivity">

    <Button
        android:id="@+id/btnLogin"
        android:text="@string/login_fb"
        android:layout_width="wrap_content"
        android:onClick="loginCLick"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/llAbove"
        android:layout_width="match_parent"
        android:layout_above="@+id/btnLogin"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/btnShareWithDialog"
            android:text="@string/share_with_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvShareResult"
            android:text="@string/share_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        </LinearLayout>

</RelativeLayout>
